{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "name": {
      "type": "string"
    },
    "price": {
      "type": "decimal"
    },
    "weight": {
      "type": "decimal"
    },
    "temperature": {
      "type": "integer"
    },
    "washing_machine": {
      "type": "boolean"
    },
    "composition": {
      "type": "string"
    },
    "dimensions": {
      "type": "string"
    },
    "short_description": {
      "type": "text"
    },
    "long_description": {
      "type": "text"
    },
    "cover": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "product_categories": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::product-category.product-category",
      "mappedBy": "products"
    },
    "note": {
      "type": "integer"
    },
    "slug": {
      "type": "uid",
      "targetField": "name"
    },
    "seo": {
      "type": "component",
      "repeatable": false,
      "component": "website.seo"
    }
  }
}
